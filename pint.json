{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal"
            }
        },
        "class_attributes_separation": {
          "elements": {
            "const": "one",
            "method": "one",
            "property": "one"
          }
        },
        "concat_space": {
            "spacing": "none"
        },
        "declare_strict_types": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        }
    }
}
